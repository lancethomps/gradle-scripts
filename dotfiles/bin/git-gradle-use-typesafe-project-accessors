#!/usr/bin/env bash
################################################################### SETUP ########################################################################
set -o errexit -o errtrace -o nounset
##################################################################################################################################################

function main() {
  git sed "$@" '\bproject\(\"\:([a-z]+)(-([a-z])([a-z]+))?\"\)' 'projects\.\1\U\3\E\4' -- '*.gradle.kts' '**/*.gradle.kts'
}

main "$@"
